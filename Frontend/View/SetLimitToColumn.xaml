<Window x:Class="Frontend.View.SetLimitToColumn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        mc:Ignorable="d"
        Title="SetLimitToColumn" Height="450" Width="800">
    <Grid>
        <Label Content="Set Limit" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" FontSize="26"/>
        <Label Content="Set Limit" HorizontalAlignment="Left" Margin="249,0,0,0" VerticalAlignment="Center"/>
        <Button Content="Set" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" Text="{Binding SetLimit, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>


    </Grid>
</Window>
