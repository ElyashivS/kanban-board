<Window x:Class="Frontend.View.MoveColumn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        mc:Ignorable="d"
        Title="MoveColumn" Height="450" Width="800">
    <Grid>
        <Label Content="Move Column" HorizontalAlignment="Center" Margin="0,95,0,0" VerticalAlignment="Top" FontSize="26"/>
        <TextBox HorizontalAlignment="Left" Margin="436,0,0,0" Text="{Binding ColumnMove, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Label Content="Move" HorizontalAlignment="Left" Margin="258,0,0,0" VerticalAlignment="Center"/>
        <Button Content="Move" HorizontalAlignment="Center" Margin="0,311,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="MoveButton"/>
    </Grid>
</Window>
